# Odoo container for LOCAL DEVELOPMENT
# Pre-installs all tvbo dependencies, then mounts source for editable install
FROM odoo:19

USER root

# Set locale
ENV LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    LANGUAGE=C.UTF-8

# Install minimal system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        python3-pip \
        libcairo2-dev \
        libpango1.0-dev \
        git \
        locales && \
    echo "en_US.UTF-8 UTF-8" > /etc/locale.gen && \
    locale-gen && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install all tvbo core dependencies (from pyproject.toml)
# This ensures pip install -e works without needing to download packages
RUN pip3 install --break-system-packages --ignore-installed typing-extensions \
    scipy numpy pandas \
    pydantic linkml-runtime PyYAML \
    owlready2 rdflib \
    jax equinox \
    sympy \
    matplotlib networkx pydot \
    mako \
    pybtex pypdf autopep8 black

# Copy init script
COPY init-odoo.sh /init-odoo.sh
RUN chmod +x /init-odoo.sh

USER odoo
ENTRYPOINT ["/init-odoo.sh"]
