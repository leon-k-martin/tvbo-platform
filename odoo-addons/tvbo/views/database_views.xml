<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Neural Mass Models Views -->
    <record id="view_neural_mass_model_list" model="ir.ui.view">
        <field name="name">tvbo.neural_mass_model.list</field>
        <field name="model">tvbo.neural_mass_model</field>
        <field name="arch" type="xml">
            <list string="Neural Mass Models">
                <field name="name"/>
                <field name="label"/>
                <field name="number_of_modes"/>
            </list>
        </field>
    </record>

    <record id="view_neural_mass_model_form" model="ir.ui.view">
        <field name="name">tvbo.neural_mass_model.form</field>
        <field name="model">tvbo.neural_mass_model</field>
        <field name="arch" type="xml">
            <form string="Neural Mass Models">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="label"/>
                        <field name="description"/>
                        <field name="number_of_modes"/>
                        <field name="parameters"/>
                        <field name="state_variables"/>
                        <field name="derived_parameters"/>
                        <field name="derived_variables"/>
                        <field name="coupling_inputs"/>
                        <field name="coupling_terms"/>
                        <field name="system_type"/>
                        <field name="functions"/>
                        <field name="stimulus"/>
                        <field name="modes"/>
                        <field name="source"/>
                        <field name="references"/>
                        <field name="iri"/>
                        <field name="has_reference"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_neural_mass_model_list" model="ir.actions.act_window">
        <field name="name">Neural Mass Models</field>
        <field name="res_model">tvbo.neural_mass_model</field>
        <field name="view_mode">list,form</field>
    </record>

